# Server Configuration
PORT=3001

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/security_dashboard?schema=public"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# AWS Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your_bucket_name

# Option 1: IAM Access Keys
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Option 2: IAM Role (if using role-based authentication)
AWS_ROLE_ARN=arn:aws:iam::account-id:role/role-name

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# AWS STS Credentials (for Inspector)
AWS_SESSION_TOKEN=your_sts_session_token

# AWS S3 Configuration
S3_ENDPOINT=http://localhost:9000 # MinIO endpoint for local development
S3_BUCKET=remediation-scripts

# Claude AI
CLAUDE_API_KEY=your_claude_api_key

# External Services
NEXT_PUBLIC_MCP_URL=http://localhost:3001

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true

# Logging
LOG_LEVEL=info

# Cache
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret
SESSION_SECRET=your-session-secret